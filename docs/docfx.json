{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "src/**/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.yml"
        ],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": [
          "articles/**/*.md",
          "*.md",
          "toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "articles/images/**"
        ]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "Guard Documentation",
      "_enableSearch": true
    },
    "markdownEngineName": "markdig",
    "dest": "../artifacts/_site",
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ]
  }
}